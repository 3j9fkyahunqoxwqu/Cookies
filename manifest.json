{
  "manifest_version": 2,
  "name": "Cookies",
  "description": "Control global browser cookies",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "privacy",
    "storage"
  ],
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/enabled.png"
    }
  },
  "applications": {
    "gecko": {
      "id": "cookies@happy-ferret.com",
      "strict_min_version": "59.0"
    }
  }
}